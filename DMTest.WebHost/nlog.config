<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="Warn"
      internalLogFile="Log/internal-nlog.txt">

  <!-- Load the ASP.NET Core plugin -->
  <extensions>
    <add assembly="NLog.Web.AspNetCore"/>
  </extensions>

  <!-- the targets to write to -->
  <targets>

    <!-- write info logs to file -->
    <target xsi:type="File" name="info" fileName="Log/info-${shortdate}.log"
                layout="${longdate}${newline}${message}${newline}${newline}" />

   <!-- write warn - error - fatal logs to file-->
     <target xsi:type="File" name="allfile" fileName="Log/${shortdate}.log"
             layout="${longdate}${newline}Controller: ${logger} | Level: ${uppercase:${level}}${newline}Url: ${aspnet-request-url} | Action: ${aspnet-mvc-action}${newline}| Item: ${aspnet-Item}${newline}Message: ${message}${newline}Message: ${exception:format=Message}${newline}Type: ${exception:format=Type}${newline}StackTrace: ${exception:format=StackTrace}${newline}${newline}" />
  
    <!-- write to the void aka just remove -->
    <target xsi:type="Null" name="blackhole" />
  </targets>

  <!-- rules to map from logger name to target -->
  <rules>
    <!--All logs, including from Microsoft-->
    <logger name="*" minlevel="Warn" writeTo="allfile" />

    <!--Skip Microsoft logs and so log only own logs of info level-->
    <logger name="Microsoft.*" minlevel="Trace" writeTo="blackhole" final="true" />
    <logger name="*" minlevel="Info" writeTo="info" />
  </rules>
</nlog>